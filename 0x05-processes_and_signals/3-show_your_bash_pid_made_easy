#!/usr/bin/env bash
# This script displays the PID and process name of processes containing the word "bash" in their name.

for pid in /proc/*/cmdline; do
    if grep -q 'bash' "$pid"; then
        pid_number=$(basename "$(dirname "$pid")")
        process_name=$(tr '\0' ' ' < "$pid" | awk '{print $1}')
        echo "$pid_number $process_name"
    fi
done
